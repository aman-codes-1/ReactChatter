{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/middleware.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/middleware"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/api/middleware"
    },
    {
      "src": "/graphql",
      "dest": "/api/middleware"
    },
    {
      "src": "/ws/graphql",
      "dest": "/api/middleware"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_SERVER_URI": "REACT_APP_SERVER_URI"
  }
}
