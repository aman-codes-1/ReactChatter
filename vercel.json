{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/api",
      "dest": "${env:REACT_APP_SERVER_URI}/api"
    },
    {
      "src": "/api/(.*)",
      "dest": "${env:REACT_APP_SERVER_URI}/api/$1"
    }
  ]
}
